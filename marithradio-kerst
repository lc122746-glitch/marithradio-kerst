<h1>MarithRadio Kerst</h1>
<button id="play">▶ Play / ❚❚ Pause</button>
<audio id="music" loop>
  <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
</audio>
<script>
const btn = document.getElementById('play');
const audio = document.getElementById('music');
btn.onclick = () => {
  if(audio.paused){ audio.play(); btn.textContent="❚❚ Pause"; }
  else{ audio.pause(); btn.textContent="▶ Play"; }
};

// Sneeuw
function sneeuw(){
  const s = document.createElement('div');
  s.className='snowflake';
  s.textContent='*';
  s.style.left = Math.random()*window.innerWidth+'px';
  s.style.fontSize = (Math.random()*20+10)+'px';
  s.style.top = '-20px';
  document.body.appendChild(s);
  let y=0;
  const speed=Math.random()*2+1;
  function vallen(){
    y+=speed; 
    s.style.top=y+'px'; 
    if(y<window.innerHeight){requestAnimationFrame(vallen);} 
    else{s.remove();}
  }
  vallen();
}
setInterval(sneeuw,200);
</script>
</body>
