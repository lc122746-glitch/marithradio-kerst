name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main

jobs:
  pages:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pages: write
      id-token: write
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Configure Pages
        uses: actions/configure-pages@v3

      - name: Create site archive
        run: |
          zip -r site.zip . -x ".git/*" ".github/workflows/*"

      - name: Upload Pages asset
        id: upload
        uses: actions/upload-pages-asset@v1
        with:
          path: ./site.zip

      - name: Deploy to Pages
        id: deploy
        uses: actions/deploy-pages@v1
        with:
          asset_id: ${{ steps.upload.outputs.asset_id }}
