<h1>MarithRadio Kerst</h1>
<img id="playButton" src="play.png" alt="Play">
<audio id="radioStream" autoplay loop>
  <source src="music/kerst1.mp3" type="audio/mpeg">
</audio>
<img id="santa" src="santa.png" alt="Kerstman">
<script>
const playButton = document.getElementById('playButton');
const radioStream = document.getElementById('radioStream');
let isPlaying = true;

playButton.addEventListener('click', ()=>{
  if(!isPlaying){
    radioStream.play(); 
    playButton.src='pause.png';
  } else {
    radioStream.pause(); 
    playButton.src='play.png';
  }
  isPlaying = !isPlaying;
});

// Sneeuw animatie
function createSnowflake(){
  const snowflake = document.createElement('div');
  snowflake.classList.add('snowflake');
  snowflake.style.left = Math.random() * window.innerWidth + 'px';
  snowflake.style.fontSize = (Math.random() * 10 + 10) + 'px';
  snowflake.textContent = '*'; // vervang emoji door ster of gewoon *
  document.body.appendChild(snowflake);
  let y = 0;
  const speed = Math.random() * 2 + 1;
  function fall() {
    y += speed; 
    snowflake.style.top = y + 'px'; 
    if(y < window.innerHeight){
      requestAnimationFrame(fall);
    } else {
      snowflake.remove();
    }
  }
  fall();
}
setInterval(createSnowflake, 200);
</script>
</body>
